{
  "name": "vscode-smartcopy",
  "displayName": "vscode-smartcopy",
  "description": "Smart Copy is a VS Code extension...",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": ["Other"],
  "main": "./out/extension.js",
  "contributes": {
    "keybindings": [
    {
      "command": "vscode-smartcopy.copyOpenEditors",
      "key": "ctrl+shift+c",
      "when": "editorTextFocus"
    }
    ],
    "submenus": [
      {
        "id": "vscode-smartcopy.submenu",
        "label": "Smart Copy"
      }
    ],
    "commands": [
      {
        "command": "vscode-smartcopy.copyOpenEditors",
        "title": "SmartCopy: Copy Open Editors"
      },
      {
        "command": "vscode-smartcopy.runGitignoreList",
        "title": "Gitignore List Only"
      },
      {
        "command": "vscode-smartcopy.runAll",
        "title": "All Files"
      },
      {
        "command": "vscode-smartcopy.runGitignore",
        "title": "Gitignore Only"
      },
      {
        "command": "vscode-smartcopy.runMinimal",
        "title": "Minimal/Optimal"
      }
    ],
    "menus": {
      "editor/title/context": [
        {
          "command": "vscode-smartcopy.copyOpenEditors",
          "group": "navigation",
          "when": "resourceLangId"
        }
      ],
      "editor/context": [
        {
          "command": "vscode-smartcopy.copyOpenEditors",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "submenu": "vscode-smartcopy.submenu",
          "group": "navigation"
        }
      ],
      "vscode-smartcopy.submenu": [
        {
          "command": "vscode-smartcopy.runGitignoreList",
          "group": "1_modification"
        },
        {
          "command": "vscode-smartcopy.runMinimal",
          "group": "1_modification"
        },
        {
          "command": "vscode-smartcopy.runGitignore",
          "group": "1_modification"
        },
        {
          "command": "vscode-smartcopy.runAll",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "build-binary": "cd ../ && GOOS=darwin GOARCH=amd64 go build -o bin/mac/smartcopy . && GOOS=linux GOARCH=amd64 go build -o bin/linux/smartcopy . && GOOS=windows GOARCH=amd64 go build -o bin/win32/smartcopy.exe .",
    "vscode:prepublish": "npm run compile && npm run build-binary",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}